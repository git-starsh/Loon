#!name = 哔哩哔哩
#!desc = 过滤哔哩哔哩广告
#!tag = 去广告
#!system = 
#!system_version = 
#!icon = https://raw.githubusercontent.com/git-starsh/Loon/main/Icon/App-Icon/BilibiliWhite.png


[Argument]
showUpList = select, "auto", "true", "false", tag = [动态]中[最常访问]的显示方式, desc = auto: 仅当列表中存在直播状态时显示; true: 始终显示; false: 始终隐藏;
filterTopReplies = switch, true, false, tag = [评论区]过滤置顶评论广告, desc = true: 开启; false: 关闭;
airborne = switch, true, false, tag = [空降助手]跳过[视频内]插播广告, desc = true: 开启; false: 关闭;
airborneDm = switch, false, true, tag = [空降助手弹幕版]仅限iPad开启, desc = true: 开启; false: 关闭;

[Rule]
# 阻止B站备用域名访问
DOMAIN, api.biliapi.com, REJECT
DOMAIN, app.biliapi.com, REJECT
DOMAIN, api.biliapi.net, REJECT
DOMAIN, app.biliapi.net, REJECT

[Rewrite]
# 移除直播广告
^https:\/\/api\.live\.bilibili\.com\/xlive\/e-commerce-interface\/v1\/ecommerce-user\/get_shopping_info\? reject-dict

# 移除皮肤推送
^https:\/\/app\.bilibili\.com\/x\/resource\/show\/skin\? response-body-json-del data.common_equip

# 移除大会员广告、移除右上角活动入口
^https:\/\/ap[ip]\.bilibili\.com\/x\/(?:resource\/(?:top\/activity|patch\/tab)|v2\/search\/square|vip\/ads\/materials)\? mock-response-body data-type=text status-code=200 data="{"code":-404,"message":"-404","ttl":1,"data":null}"

# 移除播放页开通会员横幅
^https:\/\/api\.bilibili\.com\/pgc\/activity\/deliver\/material\/receive\? mock-response-body data-type=text status-code=200 data="{"code":0,"data":{"closeType":"close_win","container":[],"showTime":""},"message":"success"}"
^https:\/\/api\.bilibili\.com\/pgc\/view\/v2\/app\/season\? response-body-json-jq 'del(.data.payment)'

# 移除开屏广告
^https:\/\/app\.bilibili\.com\/x\/v2\/splash\/(?:list|show|event\/list2)\? response-body-json-jq '.data |= with_entries(if .key | IN("show", "event_list") then .value = [] else . end)'

# 首页标签页控制、精简底栏
^https:\/\/app\.bilibili\.com\/x\/resource\/show\/tab\/v2\? response-body-json-jq jq-path="https://raw.githubusercontent.com/git-starsh/Loon/main/plugin-js/Bilibili.tab.jq"

# 移除首页推荐广告
^https:\/\/app\.bilibili\.com\/x\/v2\/feed\/index\? response-body-json-jq 'if .data.items then .data.items |= map(select((.banner_item == null) and (.ad_info == null) and (.card_goto == "av") and (.card_type | IN("small_cover_v2", "large_cover_single_v9", "large_cover_v1")))) end'

# 移除竖屏视频广告
^https:\/\/app\.bilibili\.com\/x\/v2\/feed\/index\/story\? response-body-json-jq 'if .data.items then .data.items |= map(select((.ad_info == null) and (.card_goto | startswith("ad") | not)) | del(.story_cart_icon, .free_flow_toast)) end'

# 精简我的页面、
^https:\/\/app\.bilibili\.com\/x\/v2\/account\/mine(?:\/ipad)?\? response-body-json-jq jq-path="https://raw.githubusercontent.com/git-starsh/Loon/main/plugin-js/Bilibili.mine.jq"

# 非会员开启会员专属清晰度
^https:\/\/app\.bilibili\.com\/x\/v2\/account\/myinfo\? response-body-json-jq '.data.vip |= if . != null and .status == 0 then . + { status: 1, type: 2, due_date: 9005270400000, role: 15 } else . end'

# 移除观影页广告
^https:\/\/api\.bilibili\.com\/pgc\/page\/(?:bangumi|cinema\/tab)\? response-body-json-jq '.result.modules |= if . then map(if (.style | startswith("tip")) or (.module_id | IN(241, 1283, 1441, 1284)) then .items = [] elif .style | startswith("banner") then .items |= if . then map(select(.link | contains("play"))) else [] end elif .style | startswith("function") then .items |= if . then map(select(.blink | startswith("bilibili"))) else [] end end) end'

# 移除直播间广告
^https:\/\/api\.live\.bilibili\.com\/xlive\/(?:app-interface\/v2\/index\/feed|app-room\/v1\/index\/getInfoBy(?:Room|User))\? response-body-json-jq '.data |= (del(.play_together_info, .play_together_info_v2, .activity_banner_info) | if .function_card then .function_card[] = null end | if .new_tab_info.outer_list then .new_tab_info.outer_list |= map(select(.biz_id != 33)) end | if .card_list then .card_list |= map(select(.card_type | IN("banner_v2", "activity_card_v1") | not)) end | reduce ([["show_reserve_status"], false], [["reserve_info", "show_reserve_status"], false], [["shopping_info", "is_show"], 0]) as [$path, $value] (.; if getpath($path) then setpath($path; $value) end))'

# 移除青少年模式弹窗
^https:\/\/(?:grpc\.biliapi\.net|app\.bilibili\.com)\/bilibili\.app\.interface\.v1\.Teenagers\/ModeStatus$ mock-response-body data-type=base64 data="AAAAABMKEQgCEgl0ZWVuYWdlcnMgAioA" mock-data-is-base64=true

# 移除搜索框关键词
^https:\/\/(?:grpc\.biliapi\.net|app\.bilibili\.com)\/bilibili\.app\.interface\.v1\.Search\/DefaultWords$ mock-response-body data-type=base64 data="AAAAACkaHeaQnOe0ouinhumikeOAgeeVquWJp+aIlnVw5Li7IgAoAToAQgBKAA==" mock-data-is-base64=true

# 移除播放页面广告
^https:\/\/(?:grpc\.biliapi\.net|app\.bilibili\.com)\/bilibili\.app\.view\.v1\.View\/TFInfo$ mock-response-body data-type=base64 data="AAAAAAIIAQ==" mock-data-is-base64=true

[Script]
# Proto处理
http-request ^https:\/\/(?:grpc\.biliapi\.net|app\.bilibili\.com)\/bilibili\.app\.playerunite\.v1\.Player\/PlayViewUnite$ script-path = https://raw.githubusercontent.com/git-starsh/Loon/main/plugin-js/bilibili.airborne.js, requires-body = true, binary-body-mode = true, tag = [哔哩哔哩]空降助手, enable={airborne}

http-request ^https:\/\/(?:grpc\.biliapi\.net|app\.bilibili\.com)\/bilibili\.community\.service\.dm\.v1\.DM\/DmSegMobile$ script-path = https://raw.githubusercontent.com/git-starsh/Loon/main/plugin-js/bilibili.airborne.js, requires-body = true, binary-body-mode = true, tag = [哔哩哔哩]空降助手弹幕版, enable={airborneDm}

http-response ^https:\/\/(?:grpc\.biliapi\.net|app\.bilibili\.com)\/bilibili\.(?:app\.(?:show\.v1\.Popular\/Index|dynamic\.v2\.Dynamic\/DynAll|view(?:unite)?\.v1\.View\/(?:View|ViewProgress|RelatesFeed)|playurl\.v1\.PlayURL\/PlayView|playerunite\.v1\.Player\/PlayViewUnite)|polymer\.app\.search\.v1\.Search\/SearchAll|community\.service\.dm\.v1\.DM\/DmView|main\.community\.reply\.v1\.Reply\/MainList|pgc\.gateway\.player\.v2\.PlayURL\/PlayView)$ script-path = https://raw.githubusercontent.com/git-starsh/Loon/main/plugin-js/bilibili.protobuf.js, requires-body = true, binary-body-mode = true, tag = [哔哩哔哩]Proto处理, argument=[{showUpList},{filterTopReplies},{airborneDm}]

# http-response ^https:\/\/(?:app\.bilibili\.com|grpc\.biliapi\.net)\/bilibili\.app\.dynamic\.v2\.Dynamic\/DynAll$ script-path = https://raw.githubusercontent.com/git-starsh/Loon/main/plugin-js/bilibili.protobuf.js, requires-body = true, binary-body-mode = true, tag = [哔哩哔哩]移除动态页面广告, argument=[{showUpList}]

# http-response ^https:\/\/(?:app\.bilibili\.com|grpc\.biliapi\.net)\/bilibili\.app\.interface\.v1\.Teenagers\/ModeStatus$ script-path = https://raw.githubusercontent.com/git-starsh/Loon/main/plugin-js/bilibili.protobuf.js, requires-body = true, binary-body-mode = true, tag = [哔哩哔哩]移除青少年模式弹窗

# http-response ^https:\/\/(?:app\.bilibili\.com|grpc\.biliapi\.net)\/bilibili\.app\.show\.v1\.Popular\/Index$ script-path = https://raw.githubusercontent.com/git-starsh/Loon/main/plugin-js/bilibili.protobuf.js, requires-body = true, binary-body-mode = true, tag = [哔哩哔哩]移除热门话题

# http-response ^https:\/\/(?:app\.bilibili\.com|grpc\.biliapi\.net)\/bilibili\.app\.playurl\.v1\.PlayURL\/PlayView$ script-path = https://raw.githubusercontent.com/git-starsh/Loon/main/plugin-js/bilibili.protobuf.js, requires-body = true, binary-body-mode = true, tag = [哔哩哔哩]移除播放页面广告

# http-response ^https:\/\/(?:app\.bilibili\.com|grpc\.biliapi\.net)\/bilibili\.app\.playerunite\.v1\.Player\/PlayViewUnite$ script-path = https://raw.githubusercontent.com/git-starsh/Loon/main/plugin-js/bilibili.protobuf.js, requires-body = true, binary-body-mode = true, tag = [哔哩哔哩]移除播放页面广告

# http-response ^https:\/\/(?:app\.bilibili\.com|grpc\.biliapi\.net)\/bilibili\.app\.view\.v1\.View\/(?:View|ViewProgress|TFInfo)$ script-path = https://raw.githubusercontent.com/git-starsh/Loon/main/plugin-js/bilibili.protobuf.js, requires-body = true, binary-body-mode = true, tag = [哔哩哔哩]移除播放页面广告

# http-response ^https:\/\/(?:app\.bilibili\.com|grpc\.biliapi\.net)\/bilibili\.app\.viewunite\.v1\.View\/(?:View|ViewProgress|RelatesFeed)$ script-path = https://raw.githubusercontent.com/git-starsh/Loon/main/plugin-js/bilibili.protobuf.js, requires-body = true, binary-body-mode = true, tag = [哔哩哔哩]移除播放页面广告

# http-response ^https:\/\/(?:app\.bilibili\.com|grpc\.biliapi\.net)\/bilibili\.community\.service\.dm\.v1\.DM\/(?:DmView|DmSegMobile)$ script-path = https://raw.githubusercontent.com/git-starsh/Loon/main/plugin-js/bilibili.protobuf.js, requires-body = true, binary-body-mode = true, tag = [哔哩哔哩]移除交互式弹幕

# http-response ^https:\/\/(?:app\.bilibili\.com|grpc\.biliapi\.net)\/bilibili\.main\.community\.reply\.v1\.Reply\/MainList$ script-path = https://raw.githubusercontent.com/git-starsh/Loon/main/plugin-js/bilibili.protobuf.js, requires-body = true, binary-body-mode = true, tag = [哔哩哔哩]移除评论区广告

# http-response ^https:\/\/(?:app\.bilibili\.com|grpc\.biliapi\.net)\/bilibili\.pgc\.gateway\.player\.v2\.PlayURL\/PlayView$ script-path = https://raw.githubusercontent.com/git-starsh/Loon/main/plugin-js/bilibili.protobuf.js, requires-body = true, binary-body-mode = true, tag = [哔哩哔哩]移除播放器开通会员横幅

# http-response ^https:\/\/(?:app\.bilibili\.com|grpc\.biliapi\.net)\/bilibili\.polymer\.app\.search\.v1\.Search\/SearchAll$ script-path = https://raw.githubusercontent.com/git-starsh/Loon/main/plugin-js/bilibili.protobuf.js, requires-body = true, binary-body-mode = true, tag = [哔哩哔哩]移除搜索结果广告

# http-response ^https:\/\/(?:app\.bilibili\.com|grpc\.biliapi\.net)\/bilibili\.app\.interface\.v1\.Search\/DefaultWords$ script-path = https://raw.githubusercontent.com/git-starsh/Loon/main/plugin-js/bilibili.protobuf.js, requires-body = true, binary-body-mode = true, tag = [哔哩哔哩]移除搜索框关键词

# JSON配置处理
# http-response ^https:\/\/api\.bilibili\.com\/pgc\/page\/(?:bangumi|cinema\/tab) script-path = https://raw.githubusercontent.com/git-starsh/Loon/main/plugin-js/Bilibili_remove_ads.js, requires-body = true, tag = [哔哩哔哩]移除观影页广告

# http-response ^https:\/\/app\.bilibili\.com\/x\/v2\/splash\/(?:brand\/list|event\/list2|list|show) script-path = https://raw.githubusercontent.com/git-starsh/Loon/main/plugin-js/Bilibili_remove_ads.js, requires-body = true, tag = [哔哩哔哩]移除开屏广告

# http-response ^https:\/\/app\.bilibili\.com\/x\/resource\/show\/tab\/v2\? script-path = https://raw.githubusercontent.com/git-starsh/Loon/main/plugin-js/Bilibili_remove_ads.js, requires-body = true, tag = [哔哩哔哩]精简首页顶部标签

# http-response ^https:\/\/app\.bilibili\.com\/x\/v2\/account\/(?:mine|myinfo) script-path = https://raw.githubusercontent.com/git-starsh/Loon/main/plugin-js/Bilibili_remove_ads.js, requires-body = true, tag = [哔哩哔哩]精简我的页面

# http-response ^https:\/\/app\.bilibili\.com\/x\/v2\/feed\/index script-path = https://raw.githubusercontent.com/git-starsh/Loon/main/plugin-js/Bilibili_remove_ads.js, requires-body = true, tag = [哔哩哔哩]移除首页推荐广告

# http-response ^https:\/\/app\.bilibili\.com\/x\/v2\/search\/square\? script-path = https://raw.githubusercontent.com/git-starsh/Loon/main/plugin-js/Bilibili_remove_ads.js, requires-body = true, tag = [哔哩哔哩]移除热搜广告

# http-response ^https:\/\/api\.live\.bilibili\.com\/xlive\/app-room\/v1\/index\/getInfoByRoom\? script-path = https://raw.githubusercontent.com/git-starsh/Loon/main/plugin-js/Bilibili_remove_ads.js, requires-body = true, tag = [哔哩哔哩]移除直播间广告


